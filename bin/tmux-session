#!/bin/sh

session_name=therocketstation-art

tmux_check () {
	tmux has-session -t $session_name 2>/dev/null
}

tmux_attach () {
	tmux attach-session -t $session_name
}

tmux_cleanup () {
	true
}

open_in_browser () {
	xdg-open "http://127.0.0.1:${PORT:-8080}/"
}

tmux_start () {
	cd "$(dirname "$0")"/..

	set -e; trap 'tmux kill-session -t $session_name' EXIT
	tmux new-session -d -s $session_name -n sh -x $(tput cols) -y $(tput lines)
	tmux new-window -d -t $session_name -n watch \
		./bin/start
	tmux set-option -g -t $session_name remain-on-exit on
	set +e; trap - EXIT

	open_in_browser
}

if tmux_check; then
	[ -t ] && tmux_attach
else
	tmux_cleanup
	tmux_start
	tmux_attach
fi
